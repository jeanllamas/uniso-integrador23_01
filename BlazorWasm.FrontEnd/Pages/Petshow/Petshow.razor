@page "/petshow"
@layout BlankLayout
@inject IRepository<Cliente> repository
@inject NavigationManager navigationManager
@inject AuthService authService
@using System.Security.Claims

<!doctype html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetShow</title>
    <link rel="stylesheet" href="css/petshow.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="logo">PetShow</div>
        <div class="nav-container">
            <nav>
                <ul>
                    <li><a href="#secao1">Home</a></li>
                    <li><a href="#secao2">Sobre nós</a></li>
                    <li><a href="#secao3">Produtos</a></li>
                </ul>
            </nav>
            <button class="botao">Contato</button>
            <NavLink class="nav-link" href="petshow/cadastro">
                <button class="botao">Cadastrar</button>
            </NavLink>
            <NavLink class="nav-link" href="petshow/login">
                <button class="botao">Entrar</button>
            </NavLink>
            <NavLink class="nav-link" @onclick="FazerLogout">
                <button class="botao">Sair</button>
            </NavLink>
        </div>
    </header>

    <div class="banner-section">
        <h1>Bem-vindo à PetShow</h1>
        <p>A melhor loja para animais de estimação</p>
        @if (!string.IsNullOrEmpty(authService.Nome) && !string.IsNullOrEmpty(authService.Sobrenome))
        {
            <p>Olá, @authService.Nome @authService.Sobrenome!</p>
        }
        <a href="#" class="botao">Conheça nossa loja</a>
    </div>

    <section id="sectionsobre">
        <div class="columnsobre">
            <h2>Sobre Nós</h2>
            <h4>O melhor lugar para o seu pet!</h4>
            <p>
                Nós somos uma petshop dedicada a cuidar e atender todas as necessidades dos seus amados animais de estimação.
                Com uma equipe apaixonada por animais e vasta experiência no setor, nos esforçamos para oferecer os melhores
                serviços e produtos para seus companheiros peludos.<br><br>Na nossa petshop, entendemos que cada animal é único
                e merece tratamento especial. Nosso objetivo é proporcionar um ambiente amigável e acolhedor para você e seus
                animais de estimação, onde você pode encontrar tudo o que precisa em um só lugar.
            </p>
            <button class="botao">Saiba mais</button>
        </div>
        <div class="columnsobre">
            <img src="https://img.freepik.com/fotos-gratis/cachorro-fofo-na-loja-de-animais-com-o-dono_23-2148872568.jpg?w=1380&t=st=1684869518~exp=1684870118~hmac=3d9af5b83708bb1a888a2066b336e0f05bff4d96255d2bf9ae9495d1cefaae2e"
                 alt="Sobre">
        </div>
    </section>

    <div class="title">
        <h1>SERVIÇOS</h1>
    </div>

    <section id="section1">
        <div class="column">
            <img src="https://img.freepik.com/free-photo/beautiful-pet-portrait-small-dog-with-bubbles_23-2149218434.jpg?w=1060&t=st=1684434765~exp=1684435365~hmac=54caa8f0b4074938f1e0f72e253eb0d4594638dea3c58bf33b3d3da4eb3bdfc0"
                 alt="Imagem 1">
            <h3>Banho</h3>
            <p>Limpeza e cuidado para seu pet.</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/beautiful-pet-portrait-dog_23-2149218454.jpg?t=st=1684434897~exp=1684435497~hmac=a211ae3aec80dfa3e94cab48e4e90dc933f74b5383826da1e42ab51c18205332"
                 alt="Imagem 2">
            <h3>Tosa</h3>
            <p>Estilização profissional para seu animal.</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/washing-process-small-dog-sits-table-dog-spaying-by-professional_1157-48817.jpg?t=st=1684434980~exp=1684435580~hmac=524d7497e38f859f05ea0d6806524b5d27affc78ff1e517425004c8534fff7ec"
                 alt="Imagem 3">
            <h3>Limpeza de ouvidos</h3>
            <p>Cuidado com a saúde auricular.</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/close-up-veterinarian-taking-care-dog_23-2149100178.jpg?t=st=1684435044~exp=1684435644~hmac=752183c03e0c5de7f0731d9d28f97d257a0b988ea8880e62fa71358735e90046"
                 alt="Imagem 4">
            <h3>Tratamentos</h3>
            <p>Opções personalizadas para necessidades específicas.</p>
            <button class="botao">Entre em contato </button>
        </div>
    </section>

    <section id="section2">
        <div class="column">
            <img src="https://img.freepik.com/free-photo/haircuting-process-small-dog-sits-table-dog-with-professional_1157-48813.jpg?w=1060&t=st=1684435558~exp=1684436158~hmac=7cc5a9164745cd4aa052185faf937e3ff2e2cfc5ad68437e548259cf184327cc"
                 alt="Imagem 5">
            <h3>Grooming</h3>
            <p>Descrição 5</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/brushing-teeth-process-small-dog-sits-table-dog-brushed-by-professional_1157-48823.jpg?w=1060&t=st=1684435859~exp=1684436459~hmac=6304c3b01ecc2b0fbf70f881e6f9f318a2d7b695ec25cda1f57abb918596ec52"
                 alt="Imagem 6">
            <h3>Escovação</h3>
            <p>Descrição 6</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/brushing-teeth-process-small-dog-sits-table-dog-brushed-by-professional_1157-48823.jpg?w=1060&t=st=1684435859~exp=1684436459~hmac=6304c3b01ecc2b0fbf70f881e6f9f318a2d7b695ec25cda1f57abb918596ec52"
                 alt="Imagem 7">
            <h3>Hidratação</h3>
            <p>Descrição 7</p>
            <button class="botao">Entre em contato </button>
        </div>
        <div class="column">
            <img src="https://img.freepik.com/free-photo/top-view-active-small-puppy-playing-with-caucasian-woman-while-lying-bed-playful-pet-owner-scratching-belly-her-excited-shih-tzu-dog_662251-2268.jpg?w=1060&t=st=1684436423~exp=1684437023~hmac=65b379ea691bdbbd091d749fad9e6e576b3827414f83546804c664982ddf2718"
                 alt="Imagem 8">
            <h3>Massagem</h3>
            <p>Descrição 8</p>
            <button class="botao">Entre em contato </button>
        </div>

    </section>

    <section id="title">
        <h1>O MELHOR PETSHOP DA REGIÃO!</h1>
    </section>

    <footer id="footer">

        <div class="column2">
            <div class="logo">PetShow</div>
            <p>&copy;2023 PetShow. Todos os direitos reservados.</p>
        </div>

        <div class="column2">
            <h3>Contato</h3>
            <p>(15) 92882-2919</p>
            <p>(15) 3341-1203</p>
        </div>

        <div class="column2">
            <h3>Endereço</h3>
            <p>Rua tchurus bago tchurus bengo</p>
        </div>

        <div class="column2">
            <h3>Rede Social</h3>
            <img src="" alt="Facebook">
            <img src="" alt="Instagram">
        </div>

    </footer>
</body>

</html>

@code {
    private void FazerLogout()
    {
        authService.Logout();
        navigationManager.NavigateTo("/petshow/");
    }
}
